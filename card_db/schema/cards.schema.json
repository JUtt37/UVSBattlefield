{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Card",
  "type": "object",
  "required": ["id", "name", "type", "rarity", "set"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "name": { "type": "string", "minLength": 1 },
    "type": { "type": "string", "minLength": 1 },
    "rarity": { "type": "string" },
    "cost": { "type": ["integer", "null"] },
    "attack": { "type": ["integer", "null"] },
    "health": { "type": ["integer", "null"] },
    "keywords": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": false
    },
    "text": { "type": ["string", "null"] },
    "set": {
      "type": "object",
      "required": ["code", "name"],
      "properties": {
        "code": { "type": "string" },
        "name": { "type": "string" },
        "number": { "type": ["string", "integer", "null"] }
      }
    },
    "image": {
      "type": "object",
      "properties": {
        "url": { "type": ["string", "null"] }
      },
      "required": ["url"]
    }
  },
  "additionalProperties": false
}